<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
      <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info mb-4' %>
  </div>

  <div class="panel panel-default category">

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Category</th>
          </tr>
        </thead>
        <tbody>
          <%= render @categories %>
        </tbody>
      </table>

    </div>

  </section>